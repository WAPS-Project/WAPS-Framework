{
  "name": "waps-framework",
  "version": "2.0.0-beta-291221",
  "description": "A framework for developing Web Apps, APIs and Console Apps based on PHP 8.1 and Apache",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-css": "sass framework.src/src/sass/main.sass framework.src/content/css/main.css --style compressed",
    "build-css-w": "sass framework.src/src/sass/main.sass framework.src/content/css/main.css --watch",
    "build-js": "webpack",
    "build": "npm run build-css && webpack",
    "deploy": "npm run sync && npm run build && php ./tools/deploy.php",
    "watch": "node ./tools/watcher.js",
    "sync": "node ./tools/syncConfig.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/waps/framework.git"
  },
