        "jquery": "^3.5.1",
        "sweetalert2": "^8.19.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.10.1",
        "@babel/core": "^7.10.2",
        "@babel/preset-env": "^7.14.7",
        "@babel/preset-typescript": "^7.10.1",
        "@fortawesome/fontawesome-free": "^5.12.1",
        "@types/bootstrap": "^4.5.0",
