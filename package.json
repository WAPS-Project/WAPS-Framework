{
    "name": "waps-framework",
    "version": "1.7.2",
    "description": "Ein auf PHP und Apache basierendes Framework zum Entwickeln von WebApps",
    "private": true,
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build-css": "sass framework.src/src/sass/main.sass framework.src/content/css/main.css --style compressed",
        "build-css-w": "sass framework.src/src/sass/main.sass framework.src/content/css/main.css --watch",
        "build-js": "webpack",
        "build": "npm run build-css && webpack",
        "deploy": "npm run build && php ./tools/deploy.php",
        "watch": "php ./tools/watcher.php"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@gitlab.com/waps/framework.git"
    },
    "author": "Jonas Pfalzgraf",
    "license": "MPL-2.0",
    "bugs": {
        "url": "https://gitlab.com/waps/framework/issues"
    },
    "homepage": "https://gitlab.com/waps/framework#readme",
    "dependencies": {
        "@popperjs/core": "^2.10.2",
        "bootstrap": "^5.1.3",
        "jquery": "^3.6.0",
        "sweetalert2": "^11.1.9"
    },
    "devDependencies": {
        "@babel/cli": "^7.10.1",
        "@babel/core": "^7.10.2",
        "@babel/preset-env": "^7.14.7",
        "@babel/preset-typescript": "^7.10.1",
        "@fortawesome/fontawesome-free": "^6.0.0-beta2",
        "@types/bootstrap": "^4.5.0",
        "@types/jquery": "^3.3.38",
        "@types/node": "^12.12.43",
        "babel-core": "^6.26.3",
        "babel-loader": "^8.0.6",
        "babel-preset-env": "^1.7.0",
        "core-js": "^3.19.1",
        "sass": "^1.43.4",
        "ts-loader": "^9.2.6",
        "typescript": "^4.4.4",
        "webpack": "^5.61.0",
        "webpack-cli": "^4.9.1"
    }
}
